{
  "name": "Loaded At",
  "version": "0.1.0",
  "author": "Drupalista",
  "description": "Show when you last loaded a tab for unobtrusive, convenient timetracking.",
  "homepage_url": "https://github.com/AlexanderAllen/loaded-at",

  "minimum_chrome_version": "93",
  "manifest_version": 3,
  "permissions": ["storage", "activeTab", "scripting", "history", "tabs"],
  "host_permissions": ["https://*/", "http://*/"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
      "default_title": "Loaded At"
  },
  "icons": {
      "16": "icons/stopwatch-solid.png",
      "32": "icons/stopwatch-solid.png",
      "48": "icons/stopwatch-solid.png",
      "128": "icons/stopwatch-solid.png"
  }
}